
<% layout("layouts/boilerplate") %>
<body>
  <div class="row mt-2 offset-2">
    <div class="col-8">
      <h2 class="mb-4">Book This Listing</h2>

      <form action="/listings/<%=Listing._id%>/bookings" method="POST" class="needs-validation" novalidate>
        <!-- Full Name -->
        <div class="mb-3">
          <label for="fullname" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="fullname" name="booking[fullname]" required>
          <div class="valid-feedback">Looks good!</div>
        </div>

        <!-- Room -->
        <div class="mb-3">
          <label for="room" class="form-label">Room</label>
          <input type="text" class="form-control" id="room" name="booking[room]" required>
          <div class="valid-feedback">Room selected!</div>
        </div>

        <!-- Check-in & Check-out Dates -->
        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="checkIn" class="form-label">Check-In</label>
            <input type="date" class="form-control" id="checkIn" name="booking[checkIn]" required>
            <div class="valid-feedback">Check-in date is valid!</div>
          </div>
          <div class="mb-3 col-md-6">
            <label for="checkOut" class="form-label">Check-Out</label>
            <input type="date" class="form-control" id="checkOut" name="booking[checkOut]" required>
            <div class="valid-feedback">Check-out date is valid!</div>
          </div>
        </div>

        <!-- Number of Guests -->
        <div class="mb-3">
          <label for="guest" class="form-label">Number of Guests</label>
          <input type="number" class="form-control" id="guest" name="booking[guest]" min="1" required>
          <div class="valid-feedback">Guest count is valid!</div>
        </div>

        <!-- Payment Method -->
        <div class="mb-3">
          <label for="paymentMethod" class="form-label">Payment Method</label>
          <select class="form-select" id="paymentMethod" name="booking[paymentMethod]" required>
            <option value="">Choose...</option>
            <option value="Razorpay">Razorpay</option>
            <option value="UPI">UPI</option>
            <option value="Cash">Cash</option>
            <option value="Card">Credit/Debit Card</option>
          </select>
          <div class="valid-feedback">Payment method selected!</div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-dark add-btn mt-3">Confirm Booking</button>
      </form>
    </div>
  </div>

  <script src="/js/script.js"></script>
</body>

